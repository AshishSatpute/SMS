<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.solutions.planet.world.andriod.schoolmanagmentsystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.admin.AdminActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.student.StudentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.admin.AddStudent"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.student.Demo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.student.Attendance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.student.TeacherComment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.student.Schedule"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.student.Syllabus"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.student.Homework"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.student.Event"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.student.BusPickUp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.student.EventGallery"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.teacher.TeacherActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.teacher.StudentsAttendance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.teacher.MyClass"
            android:label="@string/title_activity_teacher_demo"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.teacher.AddHomework" />
        <activity android:name=".activity.teacher.SendMsg" />
        <activity android:name=".fragment.bus.BusFragment" />
        <activity android:name=".activity.bus.BusActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".activity.TestActivity" />
        <activity
            android:name=".activity.teacher.AttendanceListCollector"
            android:label="Student List"
            android:parentActivityName=".activity.teacher.StudentsAttendance"
            android:theme="@style/AppTheme.MyTheme" />
        <activity android:name=".activity.student.StudentProfile" />
        <activity android:name=".activity.SpashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ContactUs"/>
    </application>

</manifest>